#include <stdio.h>
#include <unistd.h>
#include <fcntl.h>
#include <sys/types.h>
#include <errno.h>
#include <stdlib.h>
#include <sys/wait.h>

#define MAX_LINE 100

void child_exec(char *argv[])
{
        pid_t child;
        int status;

        child = fork();

        if (child == 0)
	{
                execve(argv[0], argv, NULL);
        }
        else
        {
                wait(&status);
                return;
        }
}

int main(void)
{
        char line[MAX_LINE];
        char *argv[3];
	char *temp;
	int count = 0;

        argv[1] = NULL;
        while (1)
        {
                printf("#cisfun$ ");
                if (fgets(line, MAX_LINE, stdin))
                {
	                while (line[count] != '\n')
                                count++;
                        temp = malloc(count + 1);
			count = 0;
			while (line[count] != '\n')
				while (line[count] != '\n')
			{
                         	temp[count] = line[count];
				count++;
			}
                        temp[count] = '\0';
			argv[0] = temp;

			child_exec(argv);
			free(temp);
		}
                else
		{
                 	printf("Error: \n");
			break;
		}
        }
	return (0);
}
